<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SingleRowCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qrImageInSR"
            android:layout_width="81dp"
            android:layout_height="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/mNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="Machine Name :"
            app:layout_constraintBottom_toTopOf="@+id/inDateTV"
            app:layout_constraintStart_toEndOf="@+id/qrImageInSR"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="Installation Date:"
            app:layout_constraintBottom_toTopOf="@+id/MIdTV"
            app:layout_constraintStart_toEndOf="@+id/qrImageInSR"
            app:layout_constraintTop_toBottomOf="@+id/mNameTV" />

        <TextView
            android:id="@+id/MIdTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="Machine ID :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/qrImageInSR"
            app:layout_constraintTop_toBottomOf="@+id/inDateTV" />

        <TextView
            android:id="@+id/mDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="23-04-2022"
            app:layout_constraintBottom_toTopOf="@+id/MIdTV"
            app:layout_constraintStart_toEndOf="@+id/inDateTV"
            app:layout_constraintTop_toBottomOf="@+id/mNameTV" />

        <TextView
            android:id="@+id/mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="abcdefghijk"
            app:layout_constraintBottom_toTopOf="@+id/inDateTV"
            app:layout_constraintStart_toEndOf="@+id/mNameTV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="9dp"
            android:text="idncsbcnjbclkcnjidchccbocubcoc"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/MIdTV"
            app:layout_constraintTop_toBottomOf="@+id/mDate"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/popUPBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/more" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>